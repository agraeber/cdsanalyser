{
  "global": {
    "files": "/src/**/*.*"
  },
  "dependencies": [
    {
      "folder": "/deps",
      "files": "/**/*.*"
    }
  ],
  "syntax": {
    "version": "v750",
    "errorForUnknownVariables": true,
    "errorForUnknownObjectTypes": true
  },
  "rules": {
    "abapdoc": {
      "ignoreConstructors": true
    },
    "ambiguous_statement": true,
    "begin_end_names": true,
    "check_ddic": true,
    "check_include": true,
    "check_syntax": true,
    "empty_statement": true,
    "implement_methods": true,
    "method_length": {
      "max": 100
    },
    "no_public_attributes": true,
    "obsolete_statement": {
      "compute": true,
      "move": true,
      "requested": true
    },
    "parser_error": true,
    "prefer_inline": true,
    "release_idoc_on_error": true,
    "type_form_parameters": true,
    "unreachable_code": true,
    "unused_variables": true,
    "use_new": true,
    "when_others_last": true,
"naming_conventions": {
  "statics": "^G._.+$",
  "instance": "^M._.+$",
  "constants": "^CO_.+$",
  "method_importing_parameters": "^I_.+$",
  "local": "^(?!L[TBVSI]_).+$",
  "types": "^(TY_.+|TP.*)$"
    }
  }
}